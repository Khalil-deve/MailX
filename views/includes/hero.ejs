
<div class="container-fluid mt-3 mb-4 email-container ">
    <div class="row">
        <section class="mt-3 pt-3 mb-3 text-center fw-bold">
            <h1><strong>Don't give them your private email,</strong></h1>
            <h2 class="fw-bold">Use <span id="generated-email">yourEmail@domain.com</span></h2>
            <p>⭐ ⭐ ⭐ ⭐ ⭐</p>
            <p>“Processing over 1,000 temporary emails per minute.”</p>

            <button class="btn btn-primary mt-3" id="generateBtn" data-bs-toggle="modal"
                data-bs-target="#emailModal">Get my
                first inbox!</button>
            <button class="btn btn-outline-secondary mt-3" id="copyBtn" disabled>Copy Inbox</button>
            <button class="btn btn-danger mt-3" id="deleteBtn" disabled>Delete Inbox</button>

            <!-- Modal -->
            <div class="modal fade" id="emailModal" tabindex="-1" aria-labelledby="emailModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content p-3">
                        <div class="modal-header border-0">
                            <h5 class="modal-title" id="emailModalLabel">Add Inbox</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        </div>

                        <div class="modal-body text-center">
                            <div class="d-flex justify-content-around align-items-center">
                                <p>I'm feeling lucky!</p>
                                <button class="btn btn-primary mb-3" id="luckyBtn">Choose for me!</button>
                            </div>
                            <p class="text-secondary">----------------------------- or -----------------------------
                            </p>

                            <div class="input-group mb-3">
                                <input type="text" id="customUsername" class="form-control"
                                    placeholder="Enter username">
                                <span class="input-group-text">@ Auto appropiate domain</span>
                            </div>

                            <button class="btn btn-success me-2" id="addInboxBtn">Add Inbox</button>
                            <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
            <!-- Responsive Inbox Card inside the existing container -->
            <div class="col-12 col-md-10 col-lg-8 offset-lg-2">
                <div class="card mt-4" id="inboxCard">
                    <div class="card-body bg-secondary text-white border border-secondary rounded text-center">
                        <h5 class="mb-3">
                            <i class="fas fa-inbox me-2"></i>Your Inbox
                        </h5>
                        <div class="mb-3">
                            <span class="badge bg-warning text-dark">Expires in: <span
                                    id="timer">10:00</span></span>
                        </div>

                        <p id="finalEmail" class="text-light small"></p>

                        <!-- Loader Section -->
                        <div id="otpLoader" class="mt-3">
                            <div class="spinner-border text-light" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Waiting for OTP or link...</p>
                        </div>

                        <!-- OTP Result Section -->
                        <div id="otpResult" class="mt-3"></div>

                        <!-- Email Detail Table (Responsive) -->
                        <div id="emailSubject" class="mt-4 table-responsive">
                            <table class="table table-secondary table-bordered text-start mb-0">
                                <thead class="fw-bold table-info">
                                    <tr>
                                        <th><i class="fas fa-user"></i> From</th>
                                        <th><i class="fas fa-user-check"></i> To</th>
                                        <th><i class="fas fa-envelope-open-text"></i> Subject</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td id="emailFrom" data-label="From">example@domain.com</td>
                                        <td id="emailTo" data-label="To">yourEmail@domain.com</td>
                                        <td id="emailSub" data-label="Subject">Your OTP Code</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>