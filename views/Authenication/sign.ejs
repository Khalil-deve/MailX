<% layout("/layout/boilerplate") %>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card main_card shadow-lg rounded-4 pb-5 pt-5">
                <div class="text-center">
                    <div class="icon mt-2 mb-2">
                        <i class="fa-solid fa-user-plus"></i>
                    </div>
                    <h3 class="text-secondary fw-bold">Sign Up</h3>
                </div>
                <form action="/users/SignUp" method="post" id="SignUp" novalidate class="needs-validation px-3">
                    <div class="form-floating mb-3">
                        <input type="text" name="FirstName" id="First_name" class="form-control" placeholder="First Name" required>
                        <label for="First_name">First Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" name="LastName" id="Last_name" class="form-control" placeholder="Last Name" required>
                        <label for="Last_name">Last Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                        <label for="email">Email</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
                        <label for="password">Password</label>
                    </div>
                    <button class="btn btn-neon w-100" type="submit">Sign Up</button>
                </form>
                <div class="mt-3 text-center">
                    <p class="text-info">Already have an account? <a href="/users/login" class="text-warning">Login</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
