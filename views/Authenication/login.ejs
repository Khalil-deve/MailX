<% layout("/layout/boilerplate") %>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card main_card shadow-lg rounded-4 pb-5 pt-5">
                <div class="text-center">
                    <div class="icon mt-2 mb-2">
                        <i class="fa-solid fa-sign-in-alt"></i>
                    </div>
                    <h3 class="text-light">Login</h3>
                </div>
                <form action="/users/login" method="post" id="Login" novalidate class="needs-validation px-3">
                    <div class="form-floating mb-3">
                        <input type="email" name="email" id="login_email" class="form-control" placeholder="Email" required>
                        <label for="login_email">Email</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" name="password" id="login_password" class="form-control" placeholder="Password" required>
                        <label for="login_password">Password</label>
                    </div>
                    <button class="btn btn-neon w-100" type="submit">Login</button>
                </form>
                <div class="mt-3 text-center">
                    <p class="text-light">Don't have an account? <a href="/users/SignUp" class="text-warning">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
